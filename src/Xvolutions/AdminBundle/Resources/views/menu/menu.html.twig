{% extends "XvolutionsAdminBundle:template:backoffice.html.twig" %}

{% block title %}Menu - Backoffice{% endblock %}

{% block maincontent %}
    <h1>{{ "Menu"|trans }}</h1>
        <div id="status" class="alert alert-success alert-dismissable" style="display: none;">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <div id="text"></div>
        </div>
        <div id="error" class="alert alert-danger alert-dismissable" style="display: none;">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <div id="text-error"></div>
        </div>
    {% if status is defined %}
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{ status|trans }}
        </div>
    {% endif %}
    {% if error is defined %}
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{ error|trans }}
        </div>
    {% endif %}

    <ul id="sortable">
        {% for page in pages %}
            <li id="{{page.title}}" class="btn btn-default">{{page.title}}</li>
        {% endfor %}
    </ul>

    <div id="sortorder">
    </div>
{% endblock %}